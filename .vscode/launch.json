{
  // VS Code debug configurations for Python
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: oaw_to_rst (Default Config)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/oaw_to_rst.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: oaw_to_rst (Test Config)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/oaw_to_rst.py",
      "args": [
        "--config",
        "./test/config.json"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: run_test (Run all tests)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/run_test.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: oaw_to_rst (External Config)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/oaw_to_rst.py",
      "args": [
        "--config",
        "${input:configPath}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "inputs": [
    {
      "id": "configPath",
      "type": "promptString",
      "description": "Path to external config JSON (absolute or relative to workspace)",
      "default": "${workspaceFolder}/config/config.json"
    }
  ]
}
